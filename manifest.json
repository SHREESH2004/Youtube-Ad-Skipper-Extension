{
    "manifest_version": 3,
    "name": "YouTube Ad Skipper",
    "version": "1.1",
    "description": "Automatically skip YouTube ads with an option to toggle the functionality.",
    "host_permissions": ["https://www.youtube.com/*"],
    "permissions": [],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  